{
  "include-component-in-tag": false,
  "packages": {
    ".": {
      "package-name": "pp",
      "release-type": "simple"
    },
    "api": {
      "component": "api",
      "package-name": "api",
      "release-type": "simple",
      "extra-files": [
        "build.gradle.kts"
      ]
    },
    "client": {
      "component": "client",
      "package-name": "client",
      "release-type": "go",
      "extra-files": [
